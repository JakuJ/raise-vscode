{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "RSL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "comment.line.rsl",
					"match": "--.*$"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "keyword.control.structure.rsl",
					"match": "\\b(scheme|extend|class|case|of|type|value|axiom|theory|object|test_case|end|with|in|pre|post|as|variable|channel|let|if|then|else)\\b"
				},
				{
					"name": "keyword.operator.bounded.rsl",
					"match": "\\~isin\\b|\\b(inter|exists|union|all|always|is|isin)\\b"
				},
				{
					"name": "support.type.rsl",
					"match": "\\b(Unit|Bool|Nat|Int|Text|Char|Real)\\b"
				},
				{
					"name": "support.type.rsl",
					"match": "(?<=\\w)-(inf)?set\\b"
				},
				{
					"name": "support.function.rsl",
					"match": "\\b(elems|dom|hd|write|read)\\b"
				},
				{
					"name": "support.constant.rsl",
					"match": "\\b(out)\\b"
				},
				{
					"name": "constant.language.rsl",
					"match": "\\b(true|false|chaos)\\b"
				},
				{
					"name": "keyword.operator.unbound.rsl",
					"match": "<<=|>>=|(\\|\\|)|(\\|=\\|)|\\*\\*|/\\\\|>=|<=|-m->|-\\~->|#|:-|\\+\\+|(\\|\\^\\|)|\/|<<|>>|<\\.|-\\~m->|-\\\\|~=|\\+>|!!|=>|<->|\\.>"
				},
				{
					"name": "keyword.control.typelevel.rsl",
					"match": "><|->|:"
				},
				{
					"name": "keyword.operator.unbound.rsl",
					"match": "\\+|-|/|\\*|>|<|===|==|=|\\^"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.rsl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.rsl",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.rsl"
}