{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "RSL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "comment.line.rsl",
					"match": "--.*$"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/",
					"contentName": "comment.block"
				},
				{
					"name": "keyword.control.structure.rsl",
					"match": "\\b(scheme|class|type|value|axiom|test_case|end|with|in)\\b"
				},
				{
					"name": "keyword.operator.bounded.rsl",
					"match": "\\~isin\\b|-inflist\\b|-list\\b|\\b(inter|exists|union|all|always|is|isin)\\b"
				},
				{
					"name": "keyword.operator.unbound.rsl",
					"match": "<<=|>>=|(\\|\\|)|(\\|=\\|)|\\*\\*|/\\\\|>=|<=|-m->|-\\~->|#|:-|\\+\\+|(\\|\\^\\|)|\/|<<|>>|<\\.|-\\~m->|-\\\\|~=|\\+>|!!|=>|<->|\\.>"
				},
				{
					"name": "keyword.control.typelevel.rsl",
					"match": "><|->|:"
				},
				{
					"name": "keyword.operator.unbound.rsl",
					"match": "\\+|-|/|\\*|>|<|===|==|="
				},
				{
					"name": "support.type.rsl",
					"match": "\\b(Int|Nat|Text|\\w+-set)\\b"
				},
				{
					"name": "constant.language.rsl",
					"match": "\\b(true|false|chaos)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.rsl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.rsl",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.rsl"
}